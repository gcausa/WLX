        </div>
      </div>
    </div>
  </section>
  <div class="d-flex justify-content-end my-3">
    <% if user_signed_in? %>
      <%= simple_form_for([course, enrollement]) do |f| %>
        <%= f.button :submit, 'InscripciÃ³n', class: "btn btn-success px-5" %>
      <% end %>
