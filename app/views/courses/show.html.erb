<% if @user_course && @user_course.id.nil? %>
  <%= render "not-enrolled", course: @course, enrollement: @user_course %>
<% elsif @user_course && @user_course.finished? %>
  <%= render "finished-project", course: @course %>
<% elsif @user_course && @user_course.project_completed? %>
  <%= render "waiting-for-feedback" %>
<% elsif @user_course && @user_course.questions_completed? %>
  <%= render "project-time", user_course: @user_course, course: @course %>
<% else %>
  <%= render "enrolled", course: @course %>
<% end %>
