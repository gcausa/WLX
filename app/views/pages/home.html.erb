<% @categories.each do |category| %>
<li><%= link_to category.gsub("_", " "), "courses?category=#{category}" %></li>
<% end %>

<% @companies.each do |company| %>
<li>
  <%= link_to company.name, "courses?company=#{company.id}" %>
  <img src="<%=company.image%>" style="height:50px;"/>
</li>
<% end %>
